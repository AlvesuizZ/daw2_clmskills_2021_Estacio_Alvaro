{% extends 'layout.twig' %}

{% block title %}Animales{% endblock %}

{% block content %}
<h2 class="text-center">Animales de la categoría seleccionada</h2>
<div class="row mt-4">
    {% if animals %}
        {% for animal in animals %}
            <div class="col-12 col-md-4 col-lg-3 text-center">
                <img src="/images/{{ animal.image }}" alt="{{ animal.name }}" class="img-fluid rounded-circle" width="140" height="140">
                <h4>{{ animal.name }}</h4>
                <p>{{ animal.summary }}</p>
                <p><a class="btn btn-secondary" href="/animal/{{ animal.id }}">Ver detalles &raquo;</a></p>
            </div>
        {% endfor %}
    {% else %}
        <p class="text-center">No hay animales en esta categoría.</p>
    {% endif %}
</div>
{% endblock %}
